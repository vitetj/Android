<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ab_custom_view_overflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="?attr/magazine_ic_action_overflow" />

    <ImageView
        android:id="@+id/ab_custom_view_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/ab_custom_view_overflow"
        android:src="?attr/magazine_ic_action_share"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ab_custom_view_font_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/ab_custom_view_share"
        android:src="?attr/magazine_ic_action_font_size"
        android:visibility="gone" />

</RelativeLayout>