<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/selector_list_item_category"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <View
        android:id="@+id/list_item_category_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/separator" />

    <TextView
        android:id="@+id/list_item_category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:clickable="false"
        android:drawableLeft="?attr/selector_list_item_categories_arrow"
        android:drawablePadding="15dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="?attr/selector_list_item_categories_textview"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textIsSelectable="false"
        android:textSize="18sp" />

</LinearLayout>